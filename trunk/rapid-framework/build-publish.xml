
<!--
	for auto publish build results
-->
<project name="rapid-framework" basedir="." default="cc_main" >
	
	<tstamp>
		<format property="today" pattern="yyyyMMdd"/>
	</tstamp>
	
	<target name="publish-ftp">
		<ftp server="www.xxx.com" remotedir="/rapid/daily-build"
				userid="xxx" passive="yes" verbose="true"
				password="xxxx">
			<fileset dir="dist">
				<include name="*.zip"/>
				<include name="testreport/**"/>
				<include name="javadoc/**"/>
			</fileset>
		</ftp>
	</target>
	
	<target name="cc_main">
		<ant antfile="build-release.xml" target="cc_main" inheritall="false" inheritrefs="true">
			<property name="label" value="${today}"/>
		</ant>
		<antcall target="publish-ftp"/>
	</target>
	
</project>