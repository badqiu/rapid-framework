<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	horizontalScrollPolicy="off"
	verticalScrollPolicy="off"
	>
	
	<mx:Metadata>
		[Event(name="fullScreen")]
		[Event(name="changePassword")]
		[Event(name="logout")]
		
		[Event(name="businessManager")]
		[Event(name="systemManager")]		
	</mx:Metadata>
	
	<mx:Script>
		<![CDATA[
			public var loginUsername : String = "";
		]]>
	</mx:Script>
	
	<mx:Image source="http://rapid-framework.googlecode.com/svn/trunk/images/logo.png"
		  left="0"
		  top="0"
		  width="80"
		  height="26"/>
		  
	<mx:HBox
			 horizontalGap="5"
			 horizontalAlign="right"
			 verticalAlign="middle" backgroundColor="#000000" right="0" paddingRight="5" paddingLeft="10" height="26">
		<mx:Spacer width="10"/>
		<mx:Text text="{loginUsername}"
				 useHandCursor="true"
				 buttonMode="true"
				 mouseChildren="false"
				 color="#FF0000"
				 fontWeight="bold"
				 fontSize="12"/>
		<mx:VRule height="10"/>
		<mx:Label text="修改密码"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  color="#FFFFFF"
				  click="dispatchEvent(new Event('changePassword'));"
				  textDecoration="underline"/>
		<mx:VRule height="10"/>
		<mx:Label text="退出系统"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  color="#FFFFFF"
				  click="dispatchEvent(new Event('logout'));"
				  textDecoration="underline"/>
		<mx:VRule height="10"/>
		
		<mx:Label text="全屏"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  textDecoration="underline"
				  color="#FFFFFF"
				  click="dispatchEvent(new Event('fullScreen'));"
				  />
	</mx:HBox>
	
	<mx:HBox top="26" height="40" width="100%" horizontalGap="5" verticalAlign="middle" styleName="topNav">
		<mx:Label text="业务管理" styleName="nav_item"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  textDecoration="underline"
				  click="dispatchEvent(new Event('businessManager'));"
			/>
		<mx:VRule height="30"/>
		<mx:Label text="系统管理" styleName="navItem"
				  useHandCursor="true"
				  buttonMode="true"
				  mouseChildren="false"
				  textDecoration="underline"
				  click="dispatchEvent(new Event('systemManager'));"			
			/>
	</mx:HBox>	
</mx:Canvas>
